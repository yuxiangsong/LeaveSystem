@model LeaveSystem.Domain.Entities.User

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
}

@section CSS{
<link href="~/Content/site-signin.css" rel="stylesheet" />
}

@section Body{


<div class="container">
    @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-signin" }))
    {
        @Html.ValidationSummary(true);
        <h2 class="form-signin-heading">Please sign in</h2>

        <div class="form-group">
            <div class="editor-label">
                @Html.LabelFor(u => u.Username)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(u => u.Username, new { @class = "form-control" })
                @Html.ValidationMessageFor(u => u.Username)
            </div>
        </div>

        <div class="form-group">
            <div class="editor-label">
                @Html.LabelFor(u => u.Password)
            </div>
            <div class="editor-field">
                @Html.PasswordFor(u => u.Password, new { @class = "form-control" })
                @Html.ValidationMessageFor(u => u.Password)
            </div>
        </div>

        
        <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>

        <div class="text-center">
            @Html.ActionLink("Create a new account", "Register", new { controller = "Account" })
        </div>
        <!-- return url -->
        @Html.Hidden("returnUrl", Request.QueryString["returnUrl"] ?? Request.Url.PathAndQuery)
    }
</div>
}




            


    

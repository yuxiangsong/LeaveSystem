@model IEnumerable<LeaveSystem.Domain.Entities.Project>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutProject.cshtml";
}
<div class="panel panel-default">
    <div class="panel-heading">
        <h3>All Products</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th class="text-center">ID</th>
                <th>Title</th>
                <th>Description</th>
                <th class="text-center">Actions</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-center">@item.Id</td>
                    <td class="text-left">@item.ProjectTitle</td>
                    <td class="text-left">@item.ProjectDescription</td>
                    <td class="text-center">
                        <div class="row">
                            <span class="col-md-2">
                                <!-- Open a project -->
                                @Html.ActionLink("Open", "Details", new { projectId = @item.Id }, new { @class = "btn btn-default" })
                            </span>
                            <span class="col-md-2">
                                <!-- Delete a project and associated tasks-->
                                @using (Html.BeginForm("Deleteproject", "Project"))
                                {
                                    @Html.Hidden("ProjectId", item.Id)
                                    <input type="submit" class="btn btn-danger" value="Delete" />
                                }
                            </span>
                        </div>
                    </td>
                </tr>
            }
        </table>
    </div>
    
</div>